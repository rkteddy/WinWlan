<Window x:Class="WinWlan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinWlan.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:WlanListViewModel/>
    </Window.DataContext>
    <Button Grid.Row="0" Name="scanBtn" Content="Scan" Command="{Binding Path=ScanWlan}"
    <Grid>
        <DataGrid Name="dataGrid" 
            HorizontalAlignment="Center"
            VerticalAlignment="Top" ItemsSource="{Binding Path=WlanList}" Width="200" Margin="100,10,200.600,0"/>

    </Grid>
</Window>
